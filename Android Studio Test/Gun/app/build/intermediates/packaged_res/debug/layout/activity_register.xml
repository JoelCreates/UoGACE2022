<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="20dp"
        tools:ignore="MissingConstraints">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            tools:context=".MainActivity">

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:onClick="login"
                android:text="Login"
                android:textColor="#670ac4"
                app:backgroundTint="#FFFFFF" />

            <TextView
                android:id="@+id/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="Register"
                android:textSize="35dp" />


            <EditText
                android:id="@+id/firstnameTextEdit"
                android:layout_marginTop="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:focusable="true"
                android:hint="First Name"
                android:textColorHighlight="#ff7eff15"
                android:textColorHint="#ffff25e6" />


            <EditText
                android:id="@+id/lastnameTextEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstnameTextEdit"
                android:layout_alignEnd="@+id/firstnameTextEdit"
                android:layout_alignRight="@+id/firstnameTextEdit"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:focusable="true"
                android:hint="Last Name"
                android:textColorHighlight="#ff7eff15"
                android:textColorHint="#ffff25e6" />


            <EditText
                android:id="@+id/usernameTextEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lastnameTextEdit"
                android:layout_alignEnd="@+id/lastnameTextEdit"
                android:layout_alignRight="@+id/lastnameTextEdit"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:focusable="true"
                android:hint="Username"
                android:textColorHighlight="#ff7eff15"
                android:textColorHint="#ffff25e6" />

            <EditText
                android:id="@+id/mailTextEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usernameTextEdit"
                android:layout_alignEnd="@+id/usernameTextEdit"
                android:layout_alignRight="@+id/usernameTextEdit"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:focusable="true"
                android:hint="Email"
                android:textColorHighlight="#ff7eff15"
                android:textColorHint="#ffff25e6" />


            <EditText
                android:id="@+id/passwordTextEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mailTextEdit"
                android:layout_alignEnd="@+id/mailTextEdit"
                android:layout_alignRight="@+id/mailTextEdit"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="#ffff299f" />


            <EditText
                android:id="@+id/confirmPasswordTextEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/passwordTextEdit"
                android:layout_alignEnd="@+id/passwordTextEdit"
                android:layout_alignRight="@+id/passwordTextEdit"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textColorHint="#ffff299f" />

            <Button
                android:id="@+id/registerBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/confirmPasswordTextEdit"
                android:layout_marginTop="20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:onClick="register"
                android:text="Register" />


        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>